// Fecha original con zona horaria
var inputDateStr = '19820413120000-0400';

// Analiza el string como fecha
var sdfInput = java.text.SimpleDateFormat("yyyyMMddHHmmssZ");
var date = sdfInput.parse(inputDateStr);

// Formatea la fecha como "dd/MM/yyyy"
var sdfOutput = java.text.SimpleDateFormat("dd/MM/yyyy");
var formattedDate = sdfOutput.format(date);

// Opcional: mostrar en logs
logger.info("Fecha convertida: " + formattedDate);

// Puedes devolver el valor o asignarlo a una variable para usarlo en el mensaje
return formattedDate;
